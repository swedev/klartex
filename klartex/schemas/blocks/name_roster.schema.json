{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://klartex.se/schemas/blocks/name_roster/v0.1",
  "title": "Name Roster Block",
  "description": "Name/role/note table for board listings etc.",
  "type": "object",
  "required": ["type", "title", "people"],
  "additionalProperties": false,
  "properties": {
    "type": { "type": "string", "const": "name_roster" },
    "title": { "type": "string", "description": "Table heading" },
    "people": {
      "type": "array",
      "description": "People entries",
      "items": {
        "type": "object",
        "required": ["name", "role"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "description": "Person name" },
          "role": { "type": "string", "description": "Role or title" },
          "note": { "type": "string", "description": "Additional note (e.g. term info)" }
        }
      },
      "minItems": 1
    }
  }
}
