{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Clause Block",
  "description": "Numbered legal clause with title and items",
  "type": "object",
  "required": ["type", "title", "items"],
  "additionalProperties": false,
  "properties": {
    "type": { "type": "string", "const": "clause" },
    "title": { "type": "string", "description": "Clause title" },
    "items": {
      "type": "array",
      "description": "Clause items (strings or nested objects with sub-items)",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "required": ["items"],
            "anyOf": [
              { "required": ["title"] },
              { "required": ["text"] }
            ],
            "properties": {
              "title": { "type": "string" },
              "text": { "type": "string" },
              "list": { "type": "string", "enum": ["numbered", "bullet"], "default": "numbered" },
              "items": { "type": "array", "minItems": 1 }
            }
          }
        ]
      },
      "minItems": 1
    }
  }
}
