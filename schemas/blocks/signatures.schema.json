{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://klartex.se/schemas/blocks/signatures/v0.1",
  "title": "Signatures Block",
  "description": "Signature block for exactly two parties",
  "type": "object",
  "required": ["type", "parties"],
  "additionalProperties": false,
  "properties": {
    "type": { "type": "string", "const": "signatures" },
    "new_page": { "type": "boolean", "default": true, "description": "Start signatures on a new page" },
    "parties": {
      "type": "array",
      "description": "Parties to sign",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "description": "Party/company name" },
          "signatory": { "type": "string", "description": "Name of person signing (defaults to name if omitted)" },
          "title": { "type": "string", "description": "Signatory title, e.g. 'Verkställande Direktör, Acme AB'" }
        }
      },
      "minItems": 2,
      "maxItems": 2
    }
  }
}
