{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Metadata Table Block",
  "description": "Key-value metadata table (date, location, etc.)",
  "type": "object",
  "required": ["type", "entries"],
  "additionalProperties": false,
  "properties": {
    "type": { "type": "string", "const": "metadata_table" },
    "entries": {
      "type": "array",
      "description": "Key-value pairs to display",
      "items": {
        "type": "object",
        "required": ["label", "value"],
        "properties": {
          "label": { "type": "string" },
          "value": { "type": "string" }
        }
      },
      "minItems": 1
    }
  }
}
