% klartex-titelsida.sty - Title page component
% Provides \makedoctitle command
%
% Usage: \usepackage{klartex-titelsida}

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{klartex-titelsida}[2026/02/18 Klartex Title Page Component]

% Language-dependent strings
% These use the kx@ prefix namespace from klartex-base.cls.
% When loaded via klartex-base.cls, the class defines these commands first.
% When loaded standalone, we provide defaults.
\providecommand{\kx@and}{Och}
\providecommand{\kx@setlang}{}

% Title page command (language-aware)
% Args: #1=Party1, #2=Party2, #3=Document title
\providecommand{\makedoctitle}[3]{%
    \kx@setlang%
    \begin{center}
        \vspace*{4cm}
        {\Large\bfseries #1}\\[1em]
        \kx@and\\[1em]
        {\Large\bfseries #2}\\[4cm]
        {\LARGE\bfseries #3}
    \end{center}
    \thispagestyle{fancy}
    \newpage
}

\endinput
